CREATE TABLE IF NOT EXISTS `tb_board` (
  `IDX` int(11) NOT NULL AUTO_INCREMENT,
  `PARENT_IDX` int(11) DEFAULT NULL,
  `TITLE` varchar(100) DEFAULT NULL,
  `CONTENTS` varchar(4000) DEFAULT NULL,
  `HIT_CNT` int(11) DEFAULT NULL,
  `DEL_GB` varchar(1) DEFAULT NULL,
  `CREA_DTM` datetime DEFAULT NULL,
  `CREA_ID` varchar(30) DEFAULT NULL,
  PRIMARY KEY (`IDX`)
) ENGINE=InnoDB AUTO_INCREMENT=8 DEFAULT CHARSET=utf8;



CREATE TABLE IF NOT EXISTS `tb_file` (
  `IDX` int(11) unsigned NOT NULL AUTO_INCREMENT,
  `BOARD_IDX` int(11) NOT NULL,
  `ORIGINAL_FILE_NAME` varchar(260) NOT NULL DEFAULT '',
  `STORED_FILE_NAME` varchar(36) NOT NULL DEFAULT '',
  `FILE_SIZE` int(11) DEFAULT NULL,
  `CREA_DTM` datetime NOT NULL DEFAULT CURRENT_TIMESTAMP,
  `CREA_ID` varchar(30) NOT NULL,
  `DEL_GB` varchar(1) NOT NULL DEFAULT 'N',
  PRIMARY KEY (`IDX`)
) ENGINE=InnoDB AUTO_INCREMENT=4 DEFAULT CHARSET=utf8;
